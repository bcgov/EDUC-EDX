{
  "name": "edx-backend",
  "version": "0.0.1",
  "description": "The backend portion of the EDX web app",
  "scripts": {
    "serve": "npm run setlocal && npm run servecmd",
    "serve-linux": "export NODE_ENV='local' && nodemon ./src/server.js",
    "serve_linux1": "export NODE_ENV=local1 && nodemon ./src/server.js",
    "serve_linux2": "export NODE_ENV=local2 && nodemon ./src/server.js",
    "settest": "set NODE_ENV='test'",
    "setlocal": "set NODE_ENV='local'",
    "servecmd": "nodemon ./src/server.js",
    "start": "node --max-old-space-size=150 ./src/server.js",
    "lint": "node_modules/.bin/eslint . --no-fix --ignore-pattern 'node_modules' --ext .js",
    "lint:fix": "node_modules/.bin/eslint . --fix --ignore-pattern 'node_modules' --ext .js",
    "test": "node_modules/.bin/jest --env node",
    "test-linux": "export NODE_ENV=test && node_modules/.bin/jest",
    "test:local": "npm run setlocal && npm run test",
    "test:unit": "npm run settest && npm run test",
    "clean": "rm -rf coverage dist",
    "pretest": "npm run lint",
    "purge": "rm -rf node_modules",
    "reinstall": "npm run purge && npm install",
    "test:unit-linux": "export NODE_ENV=test && npm run test"
  },
  "dependencies": {
    "@babel/runtime": "7.1.5",
    "@js-joda/core": "^5.2.0",
    "@js-joda/locale_en": "^4.7.0",
    "async-retry": "^1.3.3",
    "atob": "^2.1.2",
    "axios": "^0.21.2",
    "body-parser": "^1.19.0",
    "config": "^3.3.3",
    "connect-redis": "^5.1.0",
    "cors": "^2.8.5",
    "cron": "^2.1.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-prometheus-middleware": "^0.8.5",
    "express-session": "^1.17.1",
    "express-validator": "^6.9.2",
    "fast-safe-stringify": "^2.0.7",
    "has-ansi": "^4.0.0",
    "helmet": "^4.4.1",
    "http-status-codes": "^1.4.0",
    "ioredis": "^4.27.6",
    "jest-junit": "^7.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "memory-cache": "^0.2.0",
    "morgan": "^1.9.1",
    "nats": "2.6.1",
    "nconf": "^0.11.4",
    "nocache": "^2.1.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-openidconnect-keycloak-idp": "^0.1.6",
    "path": "0.12.7",
    "querystring": "0.2.0",
    "redlock": "^4.2.0",
    "strip-ansi": "^6.0.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.19.6",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/helper-plugin-utils": "^7.13.0",
    "@babel/node": "^7.13.13",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-async-to-generator": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-stage-2": "^7.8.3",
    "axios-mock-adapter": "^1.19.0",
    "babel-jest": "^27.0.2",
    "babel-plugin-rewire": "^1.2.0",
    "babel-preset-airbnb": "^5.0.0",
    "core-js": "^3.12.1",
    "eslint": "^7.26.0",
    "jest": "^27.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.20",
    "redis-mock": "^0.56.3",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "_": false
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jest-junit": {
    "outputDirectory": "./tests/unit/reports/",
    "outputName": "./junit.xml",
    "usePathForSuitName": true
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/EDUC-EDX.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov/EDUC-EDX/issues"
  }
}
